@page "/"

@inject NavigationManager navigationManager

<div class="h-full flex justify-center items-center p-8 bg-gray-100">

    <div class="w-full max-w-3xl flex flex-col space-y-3 md:space-y-6">

        <div class="w-full bg-teal-700 p-2 m-1 md:p-4 md:text-xl md:text-2xl flex justify-center">
            <img src="img/portada.png" />
        </div>

        <MenuButton Text="Play game" OnButtonClicked="PlayGame">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="play w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </MenuButton>

        <MenuButton Text="Challenge" OnButtonClicked="Challenge">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="puzzle w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path></svg>
        </MenuButton>

        <MenuButton Text="Configuration" OnButtonClicked="Configuration">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="adjustments w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
        </MenuButton>

        <MenuButton Text="How to play" OnButtonClicked="HowToPlay">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="book-open w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
        </MenuButton>

        <div class="w-full text-right">
            <a target="_blank" class="@Styles.Link" href="https://github.com/middlederg/setgame">
                Source code
            </a>
        </div>
    </div>

</div>

@code
{
    private void PlayGame()
    {
        navigationManager.NavigateTo("PrepareGame");
    }

    private void Challenge()
    {
        navigationManager.NavigateTo("Challenge");
    }

    private void Configuration()
    {
        navigationManager.NavigateTo("Configuration");
    }

    private async Task HowToPlay()
    {
        await jsRuntime.InvokeAsync<object>("open", "https://en.wikipedia.org/wiki/Set_(card_game)", "_blank");
    }
}
