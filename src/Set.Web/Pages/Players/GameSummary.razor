<div class="flex justify-between items-end my-4">
    <span class="text-teal-700 font-semibold uppercase text-sm
  lg:text-xl">Game summary</span>

    <button @onclick="Navigate" class="bg-teal-700 text-white hover:bg-teal-600 font-semibold py-2 px-4
    outline-none focus:outline-none
    inline-flex items-center">
        <span>@ExitGameText</span>
    </button>

</div>

<div class="p-4 bg-gray-100 mx-auto">

    <div class="flex justify-between items-center p-2 ">
        <span class="mx-4 text-teal-700  ">

        </span>

        <span class="font-bold flex justify-center">

            <span class="text-green-600">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="star w-6 h-6 mx-4"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>

            </span>

            <span class="text-red-600 hidden md:flex">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="x-circle w-6 h-6 mx-4"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>

            </span>

            <span class="text-yellow-400 hidden lg:flex">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="question-mark-circle w-6 h-6 mx-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </span>

            <span class="text-blue-500 hidden lg:flex">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="hand w-6 h-6 mx-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"></path></svg>
            </span>

        </span>

    </div>
    @{ int i = 0; }
    @foreach (var player in Ranking)
    {
        <PlayerSummary Player="player" Position="i++"></PlayerSummary>
    }
</div>

@code {

    [Parameter]
    public IEnumerable<Set.Core.Player> Ranking { get; set; }

    [Parameter]
    public string ExitGameText { get; set; }

    [Parameter]
    public EventCallback ExitGame { get; set; }

    private void Navigate()
    {
        ExitGame.InvokeAsync(null);
    }
}
